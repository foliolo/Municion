<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/loginPasswordFragment">

    <fragment
        android:id="@+id/loginPasswordFragment"
        android:name="al.ahgitdevelopment.municion.ui.login.LoginPasswordFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginPasswordFragment_to_licencias_fragment"
            app:destination="@id/licenciasFragment" />
    </fragment>

    <fragment
        android:id="@+id/guiasFragment"
        android:name="al.ahgitdevelopment.municion.ui.guias.GuiasFragment"
        android:label="guias_fragment"
        tools:layout="@layout/guias_fragment" />

    <fragment
        android:id="@+id/comprasFragment"
        android:name="al.ahgitdevelopment.municion.ui.compras.ComprasFragment"
        android:label="compras_fragment"
        tools:layout="@layout/compras_fragment" />

    <fragment
        android:id="@+id/licenciasFragment"
        android:name="al.ahgitdevelopment.municion.ui.licencias.LicenciasFragment"
        android:label="licencias_fragment"
        tools:layout="@layout/licencias_fragment" />

    <fragment
        android:id="@+id/tiradasFragment"
        android:name="al.ahgitdevelopment.municion.ui.tiradas.TiradasFragment"
        android:label="tiradas_fragment"
        tools:layout="@layout/tiradas_fragment" />

</navigation>
