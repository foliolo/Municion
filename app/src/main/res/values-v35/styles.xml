<resources>

    <!-- Base application theme for API 35+ -->
    <!-- Android 15 enforces edge-to-edge by default, we opt-out to maintain existing layout -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- CRITICAL FIX for API 35: Opt-out of edge-to-edge enforcement -->
        <!-- This prevents automatic padding/margins added by Android 15 -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
    </style>

    <!--AppBarLayout-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Toolbar-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="letter_black">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
