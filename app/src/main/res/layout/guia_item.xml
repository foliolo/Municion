<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageArma"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_camera" />
    <!--android:src="@drawable/pistola" -->

    <TextView
        android:id="@+id/item_apodo_guia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageArma"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/imageArma"
        android:layout_toRightOf="@+id/imageArma"
        android:text="Apodo"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/label_cupo_guia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_cupo_guia"
        android:layout_alignLeft="@+id/item_cupo_guia"
        android:layout_alignStart="@+id/item_cupo_guia"
        android:text="@string/label_cupo"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/item_cupo_guia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageArma"
        android:layout_alignLeft="@+id/item_apodo_guia"
        android:layout_alignStart="@+id/item_apodo_guia"
        android:text="1000"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/label_gastados_guia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/label_cupo_guia"
        android:layout_marginRight="25dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="@string/label_gastado"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/item_gastados_guia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/label_gastados_guia"
        android:layout_alignStart="@+id/label_gastados_guia"
        android:layout_below="@+id/label_cupo_guia"
        android:layout_gravity="right"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="15%"
        android:textAlignment="textEnd"
        android:textSize="20dip" />

</RelativeLayout>