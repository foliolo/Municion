<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/item_delete_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_purchase_cardView"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete_sweep"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/item_purchase_cardView"
        style="@style/CardViewItem"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_delete_icon"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            >

            <ImageView
                android:id="@+id/item_purchase_image"
                android:layout_width="@dimen/image_item_adapter"
                android:layout_height="@dimen/image_item_adapter"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_purchase_lbl_brand"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <!--BRAND-->
            <TextView
                android:id="@+id/item_purchase_lbl_brand"
                style="@style/CardviewItemLabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:text="@string/purchase_lbl_brand"
                app:layout_constraintBottom_toTopOf="@+id/item_purchase_lbl_bore"
                app:layout_constraintEnd_toStartOf="@+id/item_purchase_brand"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toEndOf="@+id/item_purchase_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread"
                />

            <TextView
                android:id="@+id/item_purchase_brand"
                style="@style/CardviewItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="start"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/item_purchase_lbl_brand"
                app:layout_constraintTop_toTopOf="@+id/item_purchase_lbl_brand"
                />

            <!--BORE-->
            <TextView
                android:id="@+id/item_purchase_lbl_bore"
                style="@style/CardviewItemLabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:text="@string/purchase_lbl_bore"
                app:layout_constraintBottom_toTopOf="@+id/item_purchase_lbl_price"
                app:layout_constraintEnd_toStartOf="@+id/item_purchase_bore"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toEndOf="@+id/item_purchase_image"
                app:layout_constraintTop_toBottomOf="@+id/item_purchase_lbl_brand"
                app:layout_constraintVertical_chainStyle="spread"
                />

            <TextView
                android:id="@+id/item_purchase_bore"
                style="@style/CardviewItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="start"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/item_purchase_lbl_bore"
                app:layout_constraintTop_toTopOf="@+id/item_purchase_lbl_bore"
                />

            <!--PRICE-->
            <TextView
                android:id="@+id/item_purchase_lbl_price"
                style="@style/CardviewItemLabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:text="@string/purchase_lbl_price"
                app:layout_constraintBottom_toTopOf="@+id/item_purchase_lbl_date"
                app:layout_constraintEnd_toStartOf="@+id/item_purchase_price"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toEndOf="@+id/item_purchase_image"
                app:layout_constraintTop_toBottomOf="@+id/item_purchase_lbl_bore"
                app:layout_constraintVertical_chainStyle="spread"
                />

            <TextView
                android:id="@+id/item_purchase_price"
                style="@style/CardviewItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="start"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/item_purchase_lbl_price"
                app:layout_constraintTop_toTopOf="@+id/item_purchase_lbl_price"
                />

            <!--DATE-->
            <TextView
                android:id="@+id/item_purchase_lbl_date"
                style="@style/CardviewItemLabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:text="@string/purchase_lbl_date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_purchase_date"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toEndOf="@+id/item_purchase_image"
                app:layout_constraintTop_toBottomOf="@+id/item_purchase_lbl_price"
                app:layout_constraintVertical_chainStyle="spread"
                />

            <TextView
                android:id="@+id/item_purchase_date"
                style="@style/CardviewItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="start"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/item_purchase_lbl_date"
                app:layout_constraintTop_toTopOf="@+id/item_purchase_lbl_date"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>