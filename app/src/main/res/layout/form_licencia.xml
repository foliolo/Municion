<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/appbar_layout"
        layout="@layout/basic_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <!--TIPO LICENCIA-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/form_lbl_tipo_licencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/lbl_tipo_licencia"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/form_tipo_licencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipo_licencias"
                    android:hint="@string/tipo_licencia"
                    android:inputType="text"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <!--CATEGORIA FEDERATIVA-->
            <LinearLayout
                android:id="@+id/layout_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/form_lbl_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:text="@string/lbl_categoria"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/form_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/categorias"
                    android:hint="@string/lbl_categoria"
                    android:inputType="text"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <!--TIPO PERMISO CONDUCIR-->
            <LinearLayout
                android:id="@+id/layout_permiso_conducir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/form_lbl_tipo_permiso_conducir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/lbl_tipo_permiso_conducir"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/form_tipo_permiso_conducir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:dropDownWidth="wrap_content"
                    android:entries="@array/tipo_permiso_conducir"
                    android:hint="@string/tipo_permiso_conducir"
                    android:inputType="text"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    android:visibility="visible" />
            </LinearLayout>

            <!--NUMERO DE LICENCIA-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_licencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_num_licencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/lbl_num_licencia"
                    android:inputType="text|textCapSentences"
                    android:maxLength="@integer/max_num_licencia_length" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--EDAD CONDUCTOR-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_edad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_edad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/lbl_edad"
                    android:inputType="number"
                    android:maxLength="3" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--FECHA EXPEDICION-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_form_fecha_expedicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/form_fecha_expedicion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:hint="@string/fecha_expedicion"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--FECHA CADUCIDAD-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_form_fecha_caducidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false">

                <EditText
                    android:id="@+id/form_fecha_caducidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/fecha_caducidad"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--NUMERO DE ABONADO-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_form_num_abonado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_num_abonado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/lbl_num_abonado"
                    android:inputType="number"
                    android:maxLength="@integer/max_num_abonado_guia" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--NUMERO DE POLIZA-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_form_num_poliza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_num_poliza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/lbl_num_poliza"
                    android:inputType="text|textCapSentences"
                    android:maxLength="@integer/max_poliza_seguro_licencia" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--COMUNIDAD AUTONOMA-->
            <LinearLayout
                android:id="@+id/layout_ccaa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/form_lbl_ccaa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:text="@string/lbl_ccaa"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/form_ccaa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/ccaa"
                    android:hint="@string/lbl_ccaa"
                    android:inputType="text"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <!--RANGO-->
            <LinearLayout
                android:id="@+id/layout_escala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/form_lbl_tipo_escala"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:text="@string/lbl_tipo_escala"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/form_tipo_escala"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/tipo_escala"
                    android:hint="@string/tipo_escala"
                    android:inputType="text"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_form_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="663dp"
        android:clickable="true"
        android:contentDescription="@null"
        android:onClick="fabSaveOnClick"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_save" />

</RelativeLayout>