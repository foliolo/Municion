<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_licencia_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="@string/dialog_licencia_title"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/dialog_licencia_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dialog_licencia_title"
        android:layout_marginTop="20dp"
        android:entries="@array/tipo_licencias"
        android:hint="@string/tipo_licencia"
        android:inputType="text"
        android:spinnerMode="dropdown"/>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dialog_licencia_spinner"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:text="@android:string/cancel"/>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dialog_licencia_spinner"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:text="@android:string/ok"/>

</RelativeLayout>
