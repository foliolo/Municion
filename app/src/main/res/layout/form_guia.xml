    <android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/form_label_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="25"
            android:hint="@string/labelInfo"
            android:gravity="center"
            android:textSize="22dip"
            android:layout_marginBottom="15dp" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/form_nombre_arma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="15"
            android:hint="@string/nombreArma" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/form_marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="15"
            android:hint="@string/marca" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/form_modelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="15"
            android:hint="@string/modelo" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/form_num_guia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="15"
            android:hint="@string/numGuia" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/form_calibre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="15"
            android:hint="@string/calibre" />
        
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/form_tipo_arma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tipoArma"
            android:inputType="text"
            android:ems="15"
            android:spinnerMode="dropdown" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/form_cartuchos_gastados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="@string/cartuchosGastados"
            android:inputType="number" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/form_cartuchos_totales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="@string/cartuchosTotales"
            android:inputType="number" />

    </android.support.v7.widget.LinearLayoutCompat>
