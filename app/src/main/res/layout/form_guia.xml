<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <include
        android:id="@+id/appbar_layout"
        layout="@layout/basic_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView"
        android:layout_below="@id/appbar_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <!--Mensaje de error formulario-->
            <TextView
                android:id="@+id/form_mensaje_guia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!--MARCA-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_marca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_marca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/marca"
                    android:imeOptions="actionNext"
                    android:inputType="text|textCapSentences"/>
            </android.support.design.widget.TextInputLayout>

            <!--MODELO-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_modelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_modelo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/modelo"
                    android:imeOptions="actionNext"
                    android:inputType="text|textCapSentences"/>
            </android.support.design.widget.TextInputLayout>

            <!--APODO-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_apodo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_apodo_arma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/apodo"
                    android:imeOptions="actionNext"
                    android:inputType="text|textCapSentences"/>
            </android.support.design.widget.TextInputLayout>

            <!--TIPO ARMA-->
            <TextView
                android:id="@+id/lbl_tipo_arma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/form_lbl_tipo_arma"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/form_tipo_arma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tipo_armas"
                android:hint="@string/tipoArma"
                android:inputType="text"
                android:spinnerMode="dropdown"/>

            <!--CALIBRE 1-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_calibre1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/form_calibre1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/calibre"
                    android:imeOptions="actionNext"
                    android:inputType="text|textCapSentences"
                    android:maxLines="1"/>
            </android.support.design.widget.TextInputLayout>

            <!--CHECK BOX CALIBRE 2-->
            <CheckBox
                android:id="@+id/form_check_segundo_calibre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/check_segundo_calibre"/>
            <!--CALIBRE 2-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/form_calibre2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/calibre2"
                    android:inputType="text|textCapSentences"
                    android:maxLines="1"
                    android:visibility="gone"/>
            </android.support.design.widget.TextInputLayout>

            <!--NUMERO DE GUIA-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_num_guia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_num_guia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/numGuia"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="@integer/max_num_guia_form_guias"/>
            </android.support.design.widget.TextInputLayout>

            <!--NUMERO DE ARMA-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_num_arma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_num_arma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/num_arma"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="@integer/max_num_arma_form_guias"/>
            </android.support.design.widget.TextInputLayout>

            <!--CHECK BOX AUMENTO DE CUPO-->
            <CheckBox
                android:id="@+id/form_check_aumento_cupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/aumento_cupo"/>

            <!--CUPO-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_cupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false">

                <EditText
                    android:id="@+id/form_cupo_anual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="@string/cupo_anual"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:maxLength="5"/>
            </android.support.design.widget.TextInputLayout>

            <!--CARTUCHOS GASTADOS-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_cartuchos_gastados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_cartuchos_gastados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="@string/cartuchos_comprados"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="5"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:adSize="SMART_BANNER"
        app:adUnitId="@string/banner_formularios_id">
    </com.google.android.gms.ads.AdView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_form_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_margin="12dp"
        android:clickable="true"
        android:onClick="fabSaveOnClick"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_save"/>

</RelativeLayout>