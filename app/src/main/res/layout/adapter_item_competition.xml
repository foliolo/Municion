<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/item_delete_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_purchase_cardView"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete_sweep"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/item_purchase_cardView"
        style="@style/CardViewItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_delete_icon"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            >

            <TextView
                android:id="@+id/item_competition_description"
                style="@style/CardviewItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toTopOf="@+id/item_competition_lbl_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <!--DATE-->
            <TextView
                android:id="@+id/item_competition_lbl_date"
                style="@style/CardviewItemLabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:text="@string/competition_lbl_date"
                app:layout_constraintBottom_toTopOf="@+id/item_competition_lbl_ranking"
                app:layout_constraintEnd_toStartOf="@+id/item_competition_date"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_competition_description"
                />

            <TextView
                android:id="@+id/item_competition_date"
                style="@style/CardviewItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="start"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/item_competition_lbl_date"
                app:layout_constraintTop_toTopOf="@+id/item_competition_lbl_date"
                />

            <!--RANKING-->
            <TextView
                android:id="@+id/item_competition_lbl_ranking"
                style="@style/CardviewItemLabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:text="@string/competition_lbl_ranking"
                app:layout_constraintBottom_toTopOf="@+id/item_competition_lbl_points"
                app:layout_constraintEnd_toStartOf="@+id/item_competition_ranking"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_competition_lbl_date"
                />

            <TextView
                android:id="@+id/item_competition_ranking"
                style="@style/CardviewItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="start"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/item_competition_lbl_ranking"
                app:layout_constraintTop_toTopOf="@+id/item_competition_lbl_ranking"
                />

            <!--POINTS-->
            <TextView
                android:id="@+id/item_competition_lbl_points"
                style="@style/CardviewItemLabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:text="@string/competition_lbl_points"
                app:layout_constraintBottom_toTopOf="@+id/item_competition_lbl_place"
                app:layout_constraintEnd_toStartOf="@+id/item_competition_points"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_competition_lbl_ranking"
                />

            <TextView
                android:id="@+id/item_competition_points"
                style="@style/CardviewItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="start"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/item_competition_lbl_points"
                app:layout_constraintTop_toTopOf="@+id/item_competition_lbl_points"
                />

            <!--PLACE-->
            <TextView
                android:id="@+id/item_competition_lbl_place"
                style="@style/CardviewItemLabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:text="@string/competition_lbl_place"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_competition_place"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_competition_lbl_points"
                />

            <TextView
                android:id="@+id/item_competition_place"
                style="@style/CardviewItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="start"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/item_competition_lbl_place"
                app:layout_constraintTop_toTopOf="@+id/item_competition_lbl_place"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
