<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="al.ahgitdevelopment.municion">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_3_light"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BarTheme"
            android:windowSoftInputMode="stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".FragmentMainActivity"
            android:label="@string/title_activity_fragment_main"
            android:launchMode="singleTop">
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.MAIN"/>-->
            <!--<category android:name="android.intent.category.LAUNCHER"/>-->
            <!--</intent-filter>-->
        </activity>

        <activity
            android:name=".GuiaFormActivity"
            android:label="@string/title_nueva_guia"
            android:theme="@style/BarTheme"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name=".CompraFormActivity"
            android:label="@string/title_nueva_compra"
            android:theme="@style/BarTheme"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name=".LicenciaFormActivity"
            android:label="@string/title_nueva_licencia"
            android:theme="@style/BarTheme"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"/>

        <activity
            android:name=".CameraActivity"
            android:label="@string/app_camara"/>
    </application>

</manifest>
