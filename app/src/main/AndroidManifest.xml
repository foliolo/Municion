        <!-- New modern LoginActivity (v3.0.0) -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- New modern MainActivity (v3.0.0) -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_fragment_main" />
        <activity
            android:name=".forms.GuiaFormActivity"
            android:label="@string/title_nueva_guia"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".forms.CompraFormActivity"
            android:label="@string/title_nueva_compra"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".forms.LicenciaFormActivity"
            android:label="@string/title_nueva_licencia"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".forms.TiradaFormActivity"
            android:label="@string/title_nueva_tirada"
